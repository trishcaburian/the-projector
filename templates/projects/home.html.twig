{% extends "base.html.twig" %}
{% block title %}Projects{% endblock %}

{% block body %}
    <div>
        {% if projects %}
            <table class="generic-table">
                <tr>
                    <th>Project Name</th>
                    <th>Budget</th>
                    <th>Tasks</th>
                </tr>
                {% for project in projects %}
                    <tr>
                        <td>{{ project.name }}</td>
                        <td>{{ project.currency }} {{ project.budget_f }}</td>
                        <td>
                            <a href="{{ path('view_assignments', { 'id': project.id }) }}">Assignments</a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        {% else %}
            No Projects Available.
        {% endif %}
    </div>

    <div>
        <a href="{{ path('render_create_project') }}">Create Project</a> <br>
        <a href="{{ path('render_create_person') }}">Create Person</a>
    </div>
{% endblock %}