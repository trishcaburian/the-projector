{% extends "base.html.twig" %}
{% block title %}Create Person{% endblock %}

{% block page_header %}Create Person{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/assets/css/creates.css">
{% endblock %}

{% block body %}
    <div id="form_box">
        <form method="post">
            <label for="first_name">First Name*</label><br>
            <input type="text" id="first_name" name="first_name" class="form-control" required><br>

            <label for="last_name">Last Name*</label><br>
            <input type="text" id="last_name" name="last_name" class="form-control" required><br>

            <label for="user">User Account*</label><br>
            <select id="user" name="user_id" class="form-control">
                {% for user in users %}
                    <option value="{{ user.id }}">{{ user.username }}</option>
                {% endfor %}
            </select>
            <br>

            <button type="submit" class="btn btn-lg btn-primary btn-block regular_button">Submit</button>
        </form>
    </div>
{% endblock %}