<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <script src="/assets/js/jquery-3.5.1.min.js"></script>
        <link rel="stylesheet" href="/assets/css/general.css">
        <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <div id="header_container">
            <h1 id="app_name"> The Projector </h1>
        
            {% if app.request.cookies.has('user_first_name') %}
                <p id="user_greeting">
                    Welcome {{ app.request.cookies.get('user_first_name') }}! <a href="{{ path("app_logout") }}">Logout</a>
                </p>
            {% endif %}
        </div>

        <h2>{% block page_header %}{% endblock %}</h2>

        <div id="errors">
            {% if errors is defined %}
                <ul>
                    {% for error in errors %}
                        <li>{{ error.message }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
