<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% if first_name is defined %}
            <p>
                Welcome {{ first_name }}! <a href="{{ path("app_logout") }}">Logout</a>
            </p>
        {% endif %}
        <h1> The Projector </h1>

        <h2>{% block page_header %}{% endblock %}</h2>

        {% if errors is defined %}
            <ul>
                {% for error in errors %}
                    <li>{{ error.message }}</li>
                {% endfor %}
            </ul>
        {% endif %}

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
